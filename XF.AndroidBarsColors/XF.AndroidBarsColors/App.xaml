<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.AndroidBarsColors.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="barBackgroundColor">#35B6DC</Color>
            <Color x:Key="barTextColor">#FFFFFF</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{DynamicResource Key=barBackgroundColor}"/>
                <Setter Property="BarTextColor" Value="{DynamicResource Key=barTextColor}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>